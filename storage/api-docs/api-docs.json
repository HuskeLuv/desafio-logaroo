        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Recebe um token de autenticação",
                "description": "Esse endpoint retorna um token jwt de autenticação para o usuário",
                "operationId": "dd51a484b7fa0f97c7680fdbde14cf5f",
